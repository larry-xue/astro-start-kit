---
import '../styles/global.css'
import AlpineCounter from '../components/AlpineCounter.astro'
import BlogPostList from '../components/BlogPostList.astro'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro + TailwindCSS + Alpine.js + MDX</title>
	</head>

	<body class="bg-gray-50 min-h-screen">
		<header class="bg-white shadow-sm py-4 mb-8">
			<div class="container mx-auto px-4">
				<h1 class="text-3xl font-bold text-center">Astro Start Kit</h1>
			</div>
		</header>

		<main class="container mx-auto px-4 pb-12">
			<section class="mb-12">
				<h2 class="text-2xl font-bold mb-6 text-center">Alpine.js Demo</h2>
				<div class="flex justify-center">
					<AlpineCounter />
				</div>
			</section>

			<section class="mb-12">
				<h2 class="text-2xl font-bold mb-6 text-center">MDX Blog Posts</h2>
				<BlogPostList />
			</section>
		</main>

		<footer class="bg-gray-100 py-4 mt-8">
			<div class="container mx-auto px-4 text-center text-gray-600">
				<p>Built with Astro, Tailwind CSS, Alpine.js, and MDX</p>
			</div>
		</footer>
	</body>
</html>
